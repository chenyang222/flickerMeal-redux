  /* 滑动删除 */
  /**index.wxss**/
  .container{
    width: 100%;
    display: flex;
    flex-direction: column;
  
  
  }
  .item{
    /* border-bottom: 1px solid #f8f8f8; */
  }
  .item, .item-active{
    width: 100%; 
    display: flex;
    justify-content: space-between;
    height:180rpx;
    /* line-height: 80px; */
    font-size: 30rpx;
    background: #fff;
  }
  .txt{
    width: 100%;
    margin-right:0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    transform: translateX(90px); 
    margin-left: -90px; 
    height: 180rpx;
  }
  .del{
    background-color: #FF9E35;
    width: 163rpx;
    height: 160rpx;
    color: #fff;
    text-align: center;
    transform: translateX(90px);
    transition: all 0.4s;  
    line-height:  160rpx;
  }
  .item-active .txt, .item-active .del{
    transform: translateX(0); 
  }
  