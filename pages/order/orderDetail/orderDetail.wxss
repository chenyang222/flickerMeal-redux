/* pages/order/orderDetail/orderDetail.wxss */
page{
  background-color:#f8f8f8;
}
.orderBox{
  width: 100%;
  padding-top: 2rpx;
  padding-bottom: 15rpx; 
  display: flex;
  flex-direction: column;
  align-content: center;
}
.orderBox .title{
  display: flex;
  align-items: center;
  justify-content:center;
}
.orderBox image{
  width: 10%;
  height:100rpx;
  margin-right: 25rpx;
}
.orderBox .title text{
  font-size: 55rpx;
  color: #ff9e35;
}
.orderBox .restTime{
  width: 100%;
  text-align: center;
  color: #7c7c7c;
  display: block;
  font-size: 26rpx;
  line-height: 100rpx;
}
.orderBox .btns{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-around;
}
.orderBox .btns navigator, .orderBox .btns button{
  display: inline-block;
  padding: 0 25rpx;
  line-height: 45rpx;
  height: 45rpx;
  border-radius: 30rpx;
  background-color: #ff9e35;
  color: #ffffff;
  text-align: center;
  font-size: 28rpx;
  margin: 0;
}
.meals{
  background-color: #ffffff;
}
.orderBody .product{
  margin-top: 0rpx;
  justify-content: space-between;
  border-bottom:1px solid #f8f8f8;
  padding: 1% 5%;
}
.orderBody .addGoods{
  display: flex;
  justify-content: space-between;
  font-size: 40rpx;
}
.orderBody .addGoods .price{
  font-size: 40rpx !important;
}
.orderBody .productName{
  color: #7c7c7c;
  font-size: 36rpx;
}
.orderBody .productPrice{
  margin-left: 35rpx;
  font-size: 40rpx;
}
.orderBody .productNumber{
  font-size: 36rpx;
}
.orderBody .total{
  font-size:40rpx;
  font-family:PingFangSC-Medium;
  color:rgba(253,106,8,1);
  font-weight: bold;
  text-align: right;
  display: block;
  line-height: 35rpx;
  background-color: #ffffff;
  padding: 20rpx 5%;
}
.orderBody .total text{
  margin-left: 30rpx; 
}
.orderBody .basic{
  margin-top: 15rpx;
  /* background-color: #ffffff; */
  padding: 25rpx 5%;
}
.orderBody .basic view{
  margin-top: 15rpx;
}
.orderBody .basic .basic-left{
  font-weight: bold;
  line-height: 30rpx;
  font-size: 30rpx;
  margin-right: 35rpx;
}
.orderBody .basic .vrCodeColor{
  color: #ff9e35 !important;
  font-weight: bold;
}
.orderBody .basic .basic-right{
  line-height: 30rpx;
  font-size: 30rpx;
  color: #7c7c7c;
}
.orderBody .getFoodtwoCode{
  width: 50%;
  display: block;
  margin: 0 auto;
}

.orderBody .basic .hight{
  font-weight: bolder;
  color: #ff9e35;
  font-size: 32rpx;
}


.orderFooter .topay{
  width: 80%;
  margin: 30rpx auto;
  display: block;
  line-height: 45rpx;
  height: 45rpx;
  border-radius: 30rpx;
  background-color: #ff9e35;
  color: #ffffff;
  text-align: center;
  font-size: 28rpx;
}

.orderBody .message{
  margin-top: 15rpx;
  background-color: #ffffff;
  padding: 25rpx 5%;
}
.orderBody .message view{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.orderBody .message .message-left{
  font-weight: bold;
  line-height: 30rpx;
  font-size: 22rpx;
  margin-right: 35rpx;
}
.orderBody .message .message-right{
  line-height: 30rpx;
  font-size: 20rpx;
  color: #7c7c7c;
}
.getFoodtwoCodeText{
  display: block;
  text-align: center;
  font-size: 24rpx;
  margin-top: 30rpx;
}