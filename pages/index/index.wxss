/**index.wxss**/
/* top-header */
.top-header{
  width: 100%;
  height: 220rpx;
  padding: 0rpx 20rpx;
  position: fixed;
  top: 0;
  left: -20rpx;
  background-size: 100% 100%;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.top-header .location{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.top-header .location .locationIcon{
  width:23rpx;
  height:32rpx;
}
.top-header .location text{
  color: #fff;
  font-size: 28rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.top-header .location .locationSelect{
  width:18rpx;
  height:14rpx;
}
.top-header .search{
  width:90%;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  height:60rpx;
  background:rgba(255,255,255,1);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}
.top-header .search .searchIcon{
  width:28rpx;
  height:28rpx; 
  margin-left:15rpx;
  margin-right: 15rpx;
}
.top-header .search .searchInput{
  font-size:24rpx;
  color:rgba(152,152,152,1);
  line-height:33rpx; 
}

/* banner */
.banner{
  width: 100%;
  margin-top: 220rpx;
}
.slide-image{
  width: 750rpx;
}

/* 优惠券 */
.couponPart{
  width: 94%;
  margin: 0 auto;
  margin-top: 15rpx;
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.couponBox{
  width: 32%;
  position: relative;
  margin-left:1.33%;

}
.couponBox .bg{
  width: 100%;
}
.couponBox .couponPrice{
  position: absolute;
  bottom: 5%;
  left: 5%;
}
.couponBox .price{
  font-size:45rpx;
  font-family:FZLTDHJW--GB1-0;
  color:rgba(254,254,252,1);
}
.couponBox .unit{
  font-size:21rpx;
  font-family:PingFangSC-Medium;
  color:rgba(254,254,252,1);
  margin-left: 5rpx;
}
.couponBox .nameBtn{
  position: absolute;
  top: 15%;
  right: 5%;
  display: flex;
  flex-direction: column;
  align-items:flex-end;

}
.couponBox .name{
  font-size:21rpx;
  font-family:MFYueYuan_Noncommercial-Regular;
  color:rgba(254,254,252,1);
}
.couponBox .btn{
  width:88rpx;
  height:29rpx; 
  font-size:20rpx;
  font-family:SourceHanSansCN-Normal;
  color:rgba(249,78,58,1);
  background-color: rgba(254,254,252,1);
  border-radius: 15rpx;
  line-height: 29rpx;
  text-align: center;
  margin-top: 10rpx;
}
.isCanGet{
  float: right;
  text-align: right;
  margin-right: 3%;
  font-size:24rpx;
  font-family:SourceHanSansCN-Normal;
  color:rgba(102,102,102,1);
  display: flex;
  align-items: center;
}
.isCanGet image{
  width:20rpx;
  height:9rpx;
  margin-left: 15rpx;
  float: right; 
}