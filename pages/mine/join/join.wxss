/* pages/mine/join/join.wxss */
.join{
    width: 100%;
    position: relative;
  }
  .join image{
    width: 100%;
  }
  .join-content{
    width: 90%;
    margin: 0 auto;
    position: absolute;
    top: 45%;
    left: 5%;
  }
  .join-content view{
    text-indent: 30rpx;
  }
  .join-content view text{
    font-size: 24rpx;
    line-height: 32rpx;
  }
  .join-content input{
    padding-left: 15rpx;
    font-size: 28rpx;
    line-height: 50rpx;
    height: 50rpx;
    margin-top: 30rpx;
    border-radius: 15rpx;
    background-color: #ebe9e9;
    display: block;
  }
