/* pages/mine/pay/pay.wxss */
.join{
  width: 100%;
  height: 300rpx;
  text-align: center;
  /* background-size: 100% 100%; */
  background-size:cover;
  /* position: relative; */
}
.yueimg{
  position: relative;
}
.yueimg image{
  width: 100%;
}
.rechargeBox{
  position: absolute;
  top: 0rpx;
  left: 30rpx;
}
.rechargeBox .title{
  font-size: 35rpx;
  line-height: 100rpx;
  color: #ffffff;
}
.rechargeBox .rechargerule{
  width: 100%;
  font-size: 30rpx;
  color: #ffffff;
  margin-top: 30rpx;
}
.rechargeBox .rechargerule text{
  font-size: 60rpx;
}
.payshade{
  width: 591rpx;
  height: 349rpx;
  background-color: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
}
.headtitle{
  width: 100%;
  height: 141rpx;
  line-height: 141rpx;
  font-size: 38rpx;
  color:#333333;
  font-weight: bold;
}
.payinput{
  width: 464rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: auto;
  border: 1rpx solid #E1E1E1;
  border-radius: 10rpx;
}
.payinput input{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  margin: 0;
  padding: 0;
}
.paybtn{
  widows: 100%;
  height: 124rpx;
  line-height: 124rpx;
  display: flex;
  border-top: 2rpx solid #F2A437;
  margin-top: 22rpx;
  font-size: 38rpx;
}
.paybtn text{
  flex: 1;
  width: 100%;
  height: 100%;
  text-align: center;
}
.paybtn text:first-child{
  border-right: 1rpx solid #F2A437;
  color: #666666;
}
.paybtn text:last-child{
  color: #F2A437;
}